<div class="container">
  <h1 class="mb-4">Latest News</h1>

  <% Article.published.order(created_at: :desc).each do |article| %>
    <div class="card mb-4 shadow-sm">
      <div class="row g-0">
        <div class="col-md-9">
          <div class="card-body">
            <h5 class="card-title">
              <%= link_to article.title, category_article_path(article.category, article), class: "text-decoration-none text-dark" %>
            </h5>
            <p class="card-text"><%= truncate(article.content, length: 100) %></p>
            <p class="card-text">
              <small class="text-muted">
                <%= article.category.name %> | 
                <%= time_ago_in_words(article.created_at) %> ago
              </small>
            </p>
          </div>
        </div>
        <div class="col-md-3 d-flex align-items-center">
          <% if article.photo.attached? %>
            <%= image_tag article.photo, class: "img-fluid rounded-end", style: "object-fit: cover; height: 150px; width: 100%;" %>
          <% else %>
            <div class="bg-light d-flex align-items-center justify-content-center" style="height: 150px;">
              <span class="text-muted">No image</span>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>